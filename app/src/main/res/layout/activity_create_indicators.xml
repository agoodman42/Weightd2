<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_indicators"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gts.weightd.Activities.CreateIndicatorsActivity"
    android:background="@color/colorBackground"
    android:textColor= "@color/textColor"

    >

    <Button
        android:id="@+id/circleButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:padding="15dp"
        android:layout_alignBaseline="@+id/indicatorColorTextView"
        android:layout_alignBottom="@+id/indicatorColorTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="77dp"
        android:layout_marginEnd="77dp"
        android:textColor= "@color/textColor"
        android:clickable="false"
        android:background="@color/buttonBaseColor"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/indicatorNameEditText"
        android:maxLength="10"
        android:padding="15dp"
        android:textAlignment="center"
        android:contentDescription="@string/app_name"
        android:hint="input indicator name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor= "@color/textColor"
       />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/indicatorUnitEditText"
        android:maxLength="10"
        android:padding="15dp"
        android:textAlignment="center"
        android:contentDescription="units"
        android:hint="input units of measure"
        android:layout_below="@+id/indicatorNameEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor= "@color/textColor"
        />

    <TextView
        android:text="Unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/indicatorUnitTextView"
        android:textSize="18sp"
        android:paddingTop="25dp"
        android:padding="15dp"
        android:layout_below="@+id/indicatorNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor= "@color/textColor"
        />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/indicatorNameTextView"
        android:textSize="18sp"
        android:paddingTop="25dp"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor= "@color/textColor"
        />

    <TextView
        android:text="Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/indicatorColorTextView"
        android:textSize="18sp"
        android:paddingTop="25dp"
        android:padding="15dp"
        android:textAlignment="center"
        android:layout_below="@+id/indicatorUnitEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor= "@color/textColor"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/indicatorSaveButton"
        android:text="@string/indicator_save_button_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
